<p id="notice"><%= notice %></p>

<h1>Seznam úředníků</h1>

<table>
  <thead>
    <tr>
      <th>Jméno</th>
      <th>Příjmení</th>
      <th>Ulice</th>
      <th>Město</th>
      <th>PSČ</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @urednicis.each do |urednici| %>
      <tr>
        <td><%= urednici.name %></td>
        <td><%= urednici.surname %></td>
        <td><%= urednici.street %></td>
        <td><%= urednici.city %></td>
        <td><%= urednici.zip %></td>
        <td><%= link_to 'Detail', urednici %></td>
        <td><%= link_to 'Editovat', edit_urednici_path(urednici) %></td>
        <td><%= link_to 'Smazat', urednici, method: :delete, data: { confirm: 'Jste si jisti?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


